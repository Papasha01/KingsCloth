<Page x:Class="KingsCloth.Pages.Catalog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:KingsCloth.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Catalog">

    <Grid>
        <Border CornerRadius="10" Background="{DynamicResource TernaryBackgroundColor}">

        </Border>
        <StackPanel 
            Grid.Row="0" 
            Height="60" 
            VerticalAlignment="Top" 
            Orientation="Horizontal" 
            FlowDirection="LeftToRight">

            <Button
            Style="{StaticResource MaterialDesignFlatLightButton}"
            Width="140" Height="40"
            Foreground="{DynamicResource TextColor}"
            Background="{x:Null}"
            BorderBrush="{DynamicResource SecundaryBackgroundColor}"
            ToolTip="Resource name: MaterialDesignRaisedButton"
            Content="T-shirt"
            Cursor="Hand" 
            BorderThickness="2,0,2,0" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="10,10,0,0" />

            <Button
            Style="{StaticResource MaterialDesignFlatLightButton}"
            Width="140" Height="40"
            Foreground="{DynamicResource TextColor}"
            Background="{x:Null}"
            BorderBrush="{DynamicResource SecundaryBackgroundColor}"
            ToolTip="Resource name: MaterialDesignRaisedButton"
            Content="Sweatshirts"
            Cursor="Hand" 
            BorderThickness="0,0,2,0" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="0,10,0,0" />

            <Button
            Style="{StaticResource MaterialDesignFlatLightButton}"
            Width="140" Height="40"
            Foreground="{DynamicResource TextColor}"
            Background="{x:Null}"
            BorderBrush="{DynamicResource SecundaryBackgroundColor}"
            ToolTip="Resource name: MaterialDesignRaisedButton"
            Content="Hoodie"
            Cursor="Hand" 
            BorderThickness="0,0,2,0" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="0,10,0,0" />

            <Button
            Style="{StaticResource MaterialDesignFlatLightButton}"
            Width="140" Height="40"
            Foreground="{DynamicResource TextColor}"
            Background="{x:Null}"
            BorderBrush="{DynamicResource SecundaryBackgroundColor}"
            ToolTip="Resource name: MaterialDesignRaisedButton"
            Content="Backpacks"
            Cursor="Hand" 
            BorderThickness="0,0,2,0" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="0,10,0,0" />

            <Button
            Style="{StaticResource MaterialDesignFlatLightButton}"
            Width="140" Height="40"
            Foreground="{DynamicResource TextColor}"
            Background="{x:Null}"
            BorderBrush="{DynamicResource SecundaryBackgroundColor}"
            ToolTip="Resource name: MaterialDesignRaisedButton"
            Content="Shirts"
            Cursor="Hand" 
            BorderThickness="0,0,2,0" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="0,10,0,0" />

            <Button
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="MaterialDesignIconButton"
                Background="{DynamicResource PrimaryBackgroundColor}"
                Foreground="{DynamicResource TextColor}"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" Margin="20,0,0,0" Cursor="Hand">
                <materialDesign:PackIcon
                    Kind="Basket" />
            </Button>
        </StackPanel>

        <ListView x:Name="listviewUsers"  
                  Margin="10,68,10,10"
                  Width="460" 
                  HorizontalAlignment="Left">
            <ListViewItem Width="460" HorizontalAlignment="Left"  >
                <StackPanel  Orientation="Horizontal" Height="100" Width="450">
                    <Image Source="/Pages/PagesAssets/2.png" Height="80"></Image>
                    <StackPanel Orientation="Vertical" Height="100" Width="300" Margin="10,0,0,0">
                        <TextBlock Text="Title"  Height="20" HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="Size" FontFamily="Mukta Light" />
                        <TextBlock Text="Color" FontFamily="Mukta Light" />
                        <TextBlock Text="Cost" Height="44" HorizontalAlignment="Stretch" FontFamily="Mukta Light" FontSize="18" TextAlignment="Left"/>
                    </StackPanel>
                    <Button
                        Style="{StaticResource MaterialDesignIconButton}"
                        Click="ButtonAddProduct_Click" 
                        ToolTip="MaterialDesignIconButton"
                        Margin="15,0,0,0"
                        Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                        <materialDesign:PackIcon
                            Kind="Plus" />
                    </Button>
                </StackPanel>
            </ListViewItem>

        </ListView>
    </Grid>



</Page>

<Page x:Class="KingsCloth.Pages.Stats"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:KingsCloth.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Stats">
    <Grid>

        <Border CornerRadius="10" Background="{DynamicResource TernaryBackgroundColor}">

        </Border>

        <ListView 
            x:Name="listview_product"
            Margin="10,68,10,10"
            Width="760" 
            HorizontalAlignment="Left">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" Width="760" HorizontalAlignment="Center"></WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <StackPanel Orientation="Vertical" Height="200" Width="200" Margin="10,0,0,0">
                    <Border Width="50" Height="25" CornerRadius="10,0,10,0" Background="{DynamicResource SecundaryBackgroundColor}" HorizontalAlignment="Left" Margin="10,0,0,0" >
                        <TextBlock 
                            Text="2500" 
                            Foreground="{DynamicResource TextColor}"  
                            Margin="0,0,0,0" 
                            Padding="4,3,0,0"
                            Height="34" 
                            HorizontalAlignment="Stretch" 
                            FontFamily="Mukta Light" 
                            FontSize="18" 
                            TextAlignment="Left"/>
                    </Border>
                   
                    <Image  Height="130" Width="140" Source="/Pages/PagesAssets/2.png">

                    </Image>

                    <TextBlock 
                        Text="Text" 
                        Margin="0,5,0,0"
                        Foreground="{DynamicResource TextColor}"   
                        FontFamily="Mukta Light" 
                        FontSize="24"
                        HorizontalAlignment="Center" />

                </StackPanel>
            </Grid>
        </ListView>


    </Grid>
</Page>



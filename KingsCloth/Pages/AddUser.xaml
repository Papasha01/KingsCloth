<Page x:Class="KingsCloth.Pages.AddUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:KingsCloth.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddUser">

    <Grid>
        <Border CornerRadius="10" Background="{DynamicResource TernaryBackgroundColor}">
        </Border>

        <StackPanel 
            Grid.Row="0" 
            Height="110" 
            VerticalAlignment="Top" 
            Orientation="Horizontal" 
            FlowDirection="LeftToRight">

            <Button

            Style="{StaticResource MaterialDesignRaisedButton}" 
            Click="btnAddUser_Click"
            Width="120" Height="50"
            Margin="20,0,20,0"
            Background="{DynamicResource PrimaryBackgroundColor}"
            BorderBrush="{DynamicResource PrimaryBackgroundColor}"
            materialDesign:ButtonAssist.CornerRadius="10"
            materialDesign:ShadowAssist.ShadowDepth="Depth2"
            Cursor="Hand">
                <TextBlock
                Text="Add User" 
                Cursor="Hand"
                FontFamily="Mukta Light"
                Foreground="{DynamicResource TextColor}"/>
            </Button>
            <Button

            Style="{StaticResource MaterialDesignRaisedButton}" 
            Click="btnRefresh_Click"
            Width="120" Height="50"
            Margin="20,0,20,0"
            Background="{DynamicResource PrimaryBackgroundColor}"
            BorderBrush="{DynamicResource PrimaryBackgroundColor}"
            materialDesign:ButtonAssist.CornerRadius="10"
            materialDesign:ShadowAssist.ShadowDepth="Depth2"
            Cursor="Hand">
                <TextBlock
                Text="Update Table" 
                Cursor="Hand"
                FontFamily="Mukta Light"
                Foreground="{DynamicResource TextColor}"/>
            </Button>

            <materialDesign:PackIcon 
                Height="40" 
                Width="40"  
                Margin="140,0,0,0" 
                Kind="AccountSearch" 
                Grid.ColumnSpan="2" 
                VerticalAlignment="Center" 
                Foreground="{DynamicResource SecundaryBackgroundColor}"
            />
            <TextBox
                x:Name="PhoneTextBox"
                Foreground="{DynamicResource TextColor}"
                SelectionBrush="{DynamicResource TextColor}"  
                CaretBrush="{DynamicResource PrimaryBackgroundColor}"
                BorderBrush="{DynamicResource SecundaryBackgroundColor}" 
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource PrimaryBackgroundColor}"
                Width="240" Height="45"
                Margin="10,0,20,0" 
                FontFamily="Mukta Light" 
                FontSize="14" 
                TextAlignment="Left" 
                Cursor="Arrow"  
               />

        </StackPanel>

        <ListView x:Name="listviewUsers"  
                  Margin="25,113,25,23" Width="750">
            <ListView.View>
                <GridView>
                    <GridViewColumn 
                        x:Name="id"
                        DisplayMemberBinding="{Binding Path=id}" 
                        Header="id" 
                        Width="80"/>
                    <GridViewColumn 
                        x:Name="login"
                        DisplayMemberBinding="{Binding Path=login}" 
                        Header="Login" 
                        Width="150"/>
                    <GridViewColumn 
                        x:Name="Name"
                        DisplayMemberBinding="{Binding Path=name}" 
                        Header="Name" 
                        Width="150"/>
                    <GridViewColumn 
                        x:Name="Surname"
                        DisplayMemberBinding="{Binding Path=surname}" 
                        Header="Surname" 
                        Width="150"/>
                    <GridViewColumn 
                        x:Name="id_access"
                        DisplayMemberBinding="{Binding Path=id_access}" 
                        Header="Access" 
                        Width="150"/>
                </GridView>
            </ListView.View>

        </ListView>

    </Grid>
</Page>


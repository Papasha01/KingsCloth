<Page x:Class="KingsCloth.Pages.Basket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:KingsCloth.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Basket">

    <Grid>
        <Border CornerRadius="10" Background="{DynamicResource TernaryBackgroundColor}">
        </Border>

        <ListView x:Name="listviewUsers"  
                  Margin="10,68,10,10"
                  Width="760" 
                  HorizontalAlignment="Left">
            <ListViewItem 
                Margin="0,10,0,0"
                Width="650" 
                HorizontalAlignment="Left" 
                BorderBrush="Transparent" 
                Background="Transparent" 

                 >
                <StackPanel  Orientation="Horizontal" Height="100">
                    <Image Source="/Pages/PagesAssets/2.png" Height="80"></Image>
                    <StackPanel Orientation="Vertical" Height="100" Width="300" Margin="10,0,0,0">

                        <TextBlock 
                            Text="Title" 
                            Foreground="{DynamicResource TextColor}"   
                            Height="20" 
                            HorizontalAlignment="Center"/>
                        <TextBlock 
                            Text="Size: " 
                            Foreground="{DynamicResource TextColor}"  
                            FontFamily="Mukta Light" />
                        <TextBlock 
                            Text="Color: " 
                            Foreground="{DynamicResource TextColor}"  
                            FontFamily="Mukta Light" />
                        <TextBlock 
                            Text="Left: " 
                            Foreground="{DynamicResource TextColor}"  
                            FontFamily="Mukta Light" />
                        <TextBlock 
                            Text="Cost: " 
                            Foreground="{DynamicResource TextColor}"  
                            Margin="0,5,0,0" 
                            Height="34" 
                            HorizontalAlignment="Stretch" 
                            FontFamily="Mukta Light" 
                            FontSize="18" 
                            TextAlignment="Left"/>

                    </StackPanel>

                    <StackPanel Orientation="Horizontal">

                        <Button
                            Style="{StaticResource MaterialDesignOutlinedLightButton}"
                            Width="50"
                            Height="50"
                            Foreground="{DynamicResource TextColor}"
                            BorderBrush="{DynamicResource TextColor}">
                            <TextBlock
                                Text="-"
                                FontSize="32" FontFamily="Mukta Light"/>
                        </Button>
                        <TextBox
                            VerticalAlignment="Center"
                            Height="50"
                            Width="50"
                            VerticalScrollBarVisibility="Auto"
                            BorderThickness="0,1,0,1"
                            BorderBrush="{DynamicResource TextColor}" FontFamily="Mukta Light" Padding="0,0,0,0" Cursor="Arrow" IsEnabled="False"/>
                        <Button
                            Style="{StaticResource MaterialDesignOutlinedLightButton}"
                            Width="50"
                            Height="50"
                            Foreground="{DynamicResource TextColor}"
                            BorderBrush="{DynamicResource TextColor}">
                            <TextBlock
                                Text="+"
                                FontSize="32" FontFamily="Mukta Light"/>
                        </Button>

                        <Button
                        Style="{StaticResource MaterialDesignIconButton}"
                        Click="ButtonDelete_Click" 
                        Width="60"
                        Height="60"
                        Margin="25,0,0,0"
                        Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" Cursor="Hand">
                            <materialDesign:PackIcon
                            Kind="TrashCanOutline" />
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ListViewItem>
        </ListView>

    </Grid>
</Page>

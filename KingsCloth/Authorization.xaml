<Window x:Class="KingsCloth.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:KingsCloth"
        mc:Ignorable="d"
        Title="Authorization" 
        Height="500" 
        Width="400">
    <Grid Background="#FF3A3A3A">
        <Grid Height="500">
            <Grid.RowDefinitions>
                <RowDefinition Height="2.45*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <materialDesign:Card 
                Background="#565656"
                Grid.Row="0" 
                Grid.RowSpan="2" 
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Width="360"
                Height="266"
                Padding="10" Margin="0,192,0,0"  >

                <StackPanel Margin="0 30 0 0">

                    <Grid Margin="0 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon 
                            
                            Height="40" 
                            Width="40"  
                            Margin="20,0,0,0" 
                            Kind="UserBox" 
                            Grid.ColumnSpan="2" 
                            VerticalAlignment="Center" Foreground="White"
                            />
                        <TextBox Grid.Column="2" Padding="10 0"
                              
                              MaxLength="11"
                              materialDesign:HintAssist.Hint="User"
                             materialDesign:HintAssist.FloatingScale="0.6"
                              Text=""
                              Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                              FontSize="20" FontWeight="Normal" FontStyle="Normal" FontFamily="Mukta Light" Cursor="Arrow" Foreground="White" />
                    </Grid>

                    <Grid Margin="0 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon 
                            Height="40" 
                            Width="40"  
                            Margin="20,0,0,0" 
                            Kind="ShieldKey" Grid.ColumnSpan="2" Foreground="White"/>

                        <PasswordBox Grid.Column="2" Padding="10 0"
                                  x:Name="FloatingPasswordBox"
                                 MaxLength="11"
                                  materialDesign:HintAssist.Hint="Password"
                                  materialDesign:HintAssist.FloatingScale="0.6"
                                  Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" 
                                  FontSize="20" FontFamily="Mukta Light" Cursor="Arrow" Foreground="White" />
                    </Grid>
                    <WrapPanel Orientation="Vertical" Margin="90 20" Width="143" Height="24">
                        <CheckBox Content="Remember password"
                                  Style="{StaticResource MaterialDesignUserForegroundCheckBox}" Foreground="White"/>
                    </WrapPanel>

                </StackPanel>
            </materialDesign:Card>


            <Grid Height="50" VerticalAlignment="Top" Width="120" Margin="134,70,146,0" Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>
                <Button IsDefault="True"
                    FontSize="20"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    Height="50" 
                    materialDesign:ButtonAssist.CornerRadius="25" Foreground="#DDFFFFFF" Background="#FF252525" Grid.ColumnSpan="2" BorderBrush="#FF252525">
                    <TextBlock
                        Text="Sign in" />
                </Button>
            </Grid>
            <Image Margin="146,7,146,177" Stretch="Fill" Source="assets/KingsClothWhiteLOGO.png"/>

        </Grid>
    </Grid>


</Window>
